<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_offline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.diff.provider.Activity.Offline">

    <FrameLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        >

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            app:civ_border_color="#000"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            android:layout_margin="16dp"
            app:civ_shadow_color="#000"
            app:civ_shadow_radius="10" />

        <!--<com.diff.provider.Utilities.MyTextView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:lineSpacingMultiplier="1.2"
            android:minLines="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Profile Picture"
            android:tag="distance_ride"
            android:textColor="@android:color/black"
            android:textSize="10sp" />-->

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.diff.provider.Utilities.MyButton
                android:id="@+id/goOnlineBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/button_margin"
                android:background="@color/colorPrimary"
                android:padding="@dimen/button_padding"
                android:text="@string/go_online"
                android:textColor="@color/button_text_color" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/offline_bg" />

        <com.diff.provider.Utilities.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:minLines="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="OFFLINE MODE"
            android:tag="distance_ride"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

    </RelativeLayout>

</LinearLayout>
