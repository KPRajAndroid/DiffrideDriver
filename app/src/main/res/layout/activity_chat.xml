<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnrTitle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_bar"
        android:elevation="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/back_icon"
            android:tint="@color/white"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProvider"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_dummy_user"
            />

        <com.diff.provider.Utilities.MyBoldTextView
            android:id="@+id/username_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:text="Chat"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>


    <com.diff.provider.Utilities.ChatView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:chatview="http://schemes.android.com/apk/res-auto"
        android:id="@+id/chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        chatview:backgroundColor=""
        chatview:bubbleBackgroundRcv="@color/black"
        chatview:bubbleBackgroundSend="@color/white"
        chatview:bubbleElevation="elevated"
        chatview:inputBackgroundColor=""
        chatview:inputHintColor="@color/off_white"
        chatview:inputTextAppearance="@color/black"
        chatview:inputTextColor="@color/black"
        chatview:inputTextSize="18sp"
        chatview:inputUseEditorAction="true"
        chatview:sendBtnBackgroundTint="@color/black"
        chatview:sendBtnIcon="@drawable/ic_send_white_24dp"
        chatview:sendBtnIconTint="@color/black" />

</LinearLayout>
